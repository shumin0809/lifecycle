<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <Button
        android:id="@+id/launch_fragment_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Launch fragments view pager"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/launch_view_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Launch views view pager"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/launch_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Launch recycler view"
        android:textSize="18sp"
        />

</LinearLayout>
